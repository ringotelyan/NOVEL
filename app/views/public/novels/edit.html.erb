<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h3>ゴフノベル編集フォーム</h3>
      <%= render 'error', novel: @novel %>
    </div>
  </div>
</div>

<%= form_with model: @novel, url: public_novel_path(@novel.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end %>