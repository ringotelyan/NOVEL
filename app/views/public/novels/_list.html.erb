
    <table class="table table-borderless">
      <% novels.each do |novel| %>
          <tbody>
            <tr id="novel_<%= novel.id %>">
              <td>
                <%= link_to public_novel_path(novel.id), class:"text-success" do %>
                  <%= novel.title %>
                <% end %>
              </td>
              <td>
                <%= link_to public_user_path(novel.user), class:"text-success" do %>
                  <%= novel.user.name %>
                <% end %>
              </td>
              <td id="novel_<%= novel.id %>_btn"><%= render "public/favorites/btn", novel: novel %></td>
              <td>
                <%= link_to "#{novel.active_comments.count} コメント", public_novel_path(novel.id), class:"text-success" %><br>
                閲覧数: <%= novel.view_counts.count %>
              </td>
            </tr>
          </tbody>
      <% end %>
    </table>