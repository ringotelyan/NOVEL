<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-borderless">
        <tr><td><h3><%= @novel.title %></h3></td></tr>
        <tr><td><%= @novel.user.name %></td></tr>
        <tr><td><%= @novel.body %></td></tr>
        <tr id="novel_<%= @novel.id %>">
          <td>投稿日: <%= @novel.created_at.strftime('%Y/%m/%d') %></td>
          <td class="btn"><%= render "public/favorites/btn", novel: @novel %></td>
          <td>コメント件数: <%= @novel.novel_comments.count %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー名</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render 'public/novel_comments/index', novel: @novel %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-borderless">
        <%= form_with model: [@novel, @novel_comment], url: public_novel_novel_comments_path(@novel.id), method: :post do |f| %>
          <tr>
            <td><%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", cols: 100 %></td>
          </tr>
          <tr><td><%= f.submit "コメント送信" %></td></tr>
        <% end %>
      </table>
    </div>
    <div class="col-4 offset-4">
      <table class="table table-borderless">
        <% if @novel.user == current_user %>
          <tr>
            <td><%= link_to "小説を編集する", edit_public_novel_path(@novel.id), class: "btn btn-success" %></td>
            <td><%= button_to "小説を削除する", public_novel_path(@novel), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>