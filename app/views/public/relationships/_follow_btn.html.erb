<% if current_user != user %>
  <% if current_user.name != "ゲストユーザー" %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", public_user_relationships_path(user), method: :delete, class: "btn btn-sm btn-outline-success", remote: true %>
    <% else %>
      <%= link_to "フォローする", public_user_relationships_path(user), method: :post, class: "btn btn-sm btn-success", remote: true %>
    <% end %>
  <% end %>
<% end %>