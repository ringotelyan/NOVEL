<div class="container">
  <div class="row">
    <div class="col text-center mt-1", style="background-color: #99cccc;">
      <%= flash[:notice] %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-8 offset-2 mt-5">
      <div class="index-wrapped">
        <h4 style="background-color: #99ff99;", class="text-white pl-5">ユーザープロフィール編集フォーム</h4>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
          <table class="table table-borderless">
            <tr><td><strong><label for="inputName">ユーザー名</label></strong></td></tr>
            <tr><td><%= f.text_field :name, autofocus: true, size: 80, id: "inputName", placeholder:"ユーザー名" %></td></tr>
            <tr><td><strong><label for="inputImage">プロフィール画像</label></strong></td></tr>
            <tr><td><%= f.file_field :profile_image, placeholder: "プロフィール画像 ", accept: "image/*" %></td></tr>
            <tr><td><label for="inputIntroduction">自己紹介</label></td></tr>
            <tr><td><%= f.text_area :introduction, autofocus: true, rows: 5, cols: 80, id: "inputIntroduction", placeholder:"自己紹介" %></td></tr>
            <tr><td><center><%= f.submit '更新する', class:"btn btn-sm btn-success mr-5" %><%= link_to "退会する", public_users_unsubscribe_path, class: "btn btn-sm btn-danger ml-5" %></center></td></tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>




