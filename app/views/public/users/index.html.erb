<div class="container">
  <div class="row">
    <%= render 'list', user: @user %>

    <div class="col-sm-12 col-md-8 offset-md-1 mx-sm-auto mt-3">

      <div class="index-wrapped">
      <h4 style="background-color: #99ff99;", class="text-white pl-5">会員一覧</h4>
        <table class="table table-borderless">
          <% @users.each do |user| %>
            <% if user.name != "ゲストユーザー" %>
              <tr id="follow-form">
                <td width="10%">
                  <%= link_to public_user_path(user.id) do %>
                    <%= image_tag user.get_profile_image(40, 40) %>
                  <% end %>
                </td>
                <td width="30%">
                  <%= link_to public_user_path(user.id), class:"text-success" do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td id="follow_form_<%= user.id %>", style="text-align: right;">
                  <%= render 'public/relationships/follow_btn', user: user %>
                </td>
              </tr>
            <% end %>

          <% end %>

        </table>
        <%= paginate @users %>

      </div>
    </div>
  </div>
</div>
