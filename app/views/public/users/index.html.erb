<div class="container">
  <div class="row">
    <%= render 'list', user: @user %>

    <div class="col-9">
      <h2>ユーザー一覧</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>ユーザー名</th>
          </tr>
          <% @users.each do |user| %>
            <% if user.name != "ゲストユーザー" %>
              <tr id="follow-form">
                <td>
                  <%= link_to public_user_path(user.id) do %>
                    <%= image_tag user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to public_user_path(user.id) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td id="follow_form_<%= user.id %>">
                  <%= render 'public/relationships/follow_btn', user: user %>
                </td>
              </tr>
            <% end %>

          <% end %>
        </table>
    </div>
  </div>
</div>
