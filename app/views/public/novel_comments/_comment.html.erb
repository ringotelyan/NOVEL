<div id="comment-<%=novel_comment.id%>">
  <div><%= image_tag novel_comment.user.get_profile_image(20, 20) %><%= novel_comment.user.name %>　<%= novel_comment.created_at.strftime('%Y/%m/%d') %></div>
  <div><%= novel_comment.comment %>
  <% if novel_comment.user == current_user %>
      <div style="text-align: right;">
        <%= link_to "削除", public_novel_novel_comment_path(novel_comment.novel, novel_comment), method: :delete, remote: true, class: "text-danger" %>
      </div>
  <% end %>
  </div>
</div>