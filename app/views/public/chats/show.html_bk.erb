<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h2><%= @user.name %></h2>
      <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-sizr: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tbody>
            <tr>
              <th class="message">
                <p style="text-align: left;"><%= chat.message %></p>
              </th>
              <th></th>
            </tr>
          <% else %>
            <tr>
              <th></th>
              <th>
                <p style="text-align: right;"><%= chat.message %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat, url: public_chats_path(@chat), method: :post, data: {remote: true} do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "メッセージ送信", class:"btn btn-success chat-btn" %>
      <% end %>

    </div>
  </div>
</div>