<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h2><%= @user.name %></h2>
      <div class="message table">
            <span style="text-align: left; font-size: 20px;"><%= current_user.name %></span>
            <span style="text-align: right; font-sizr: 20px;"><%= @user.name %></span>
          </div>
          <ul id="message", style="list-style: none;">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <li style="text-align: left;"><%= chat.message %></li>
          <% else %>
            <li style="text-align: right;"><%= chat.message %></li>
          <% end %>
        <% end %>
        </ul>


      <%= form_with model: @chat, url: public_chats_path(@chat), method: :post, data: {remote: true} do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "メッセージ送信", class:"btn btn-success chat-btn" %>
      <% end %>

    </div>
  </div>
</div>