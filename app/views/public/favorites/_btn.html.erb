<% if current_user.name != "ゲストユーザー" %>
  <% if novel.favorited_by?(current_user) %>
    <%= link_to "ブックマーク解除", public_novel_favorites_path(novel), method: :delete, class: "btn btn-outline-success", remote: true %><br>
    ブックマーク数:<%= novel.active_favorites.count %>
  <% else %>
    <%= link_to "　ブックマーク　", public_novel_favorites_path(novel), method: :post, class: "btn btn-success", remote: true %><br>
    ブックマーク数:<%= novel.active_favorites.count %>
  <% end %>
<% else %>
  ブックマーク数:<%= novel.active_favorites.count %>
<% end %>