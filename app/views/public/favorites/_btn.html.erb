<% if novel.favorited_by?(current_user) %>
  <%= link_to public_novel_favorites_path(novel), method: :delete, remote: true do %>
    ♥<%= novel.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to public_novel_favorites_path(novel), method: :post, remote: true do %>
    ♡<%= novel.favorites.count %> いいね
  <% end %>
<% end %>