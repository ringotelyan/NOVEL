<div class="container">
  <div class="row">
    <div class="col-md-4 offset-4 px-5 mt-5">
      <div class="in-index text-center">
        <h2 style="background-color: #00cc99;", class="text-white pl-3 mb-4">Sign up</h2>

        <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <!--ユーザー名登録フォーム-->
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(6文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions text-center mt-3">
            <%= f.submit "登録する", class:"btn btn-success" %>
          </div>
        <% end %>

        <div class="text-center mt-2">
          <%= render "public/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>
