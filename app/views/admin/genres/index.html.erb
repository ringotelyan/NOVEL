<div class="container">
  <div class="row">
    <div class="col text-center mt-1", style="background-color: #99cccc;">
      <%= flash[:notice] %>
      <%= flash.now[:alert] %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2 mt-5">
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <h4>ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>ジャンル名</td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録'%></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to admin_genre_path(genre) do %>
                <%= genre.name %>
              <% end %>
            </td>
            <td><%= link_to "ジャンル名を編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>