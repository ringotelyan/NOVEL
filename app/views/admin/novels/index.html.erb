<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h4>投稿小説一覧</h4>
    </div>
  </div>
  <div classs="row">
    <div class="col-8 offset-2">
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>作家名</th>
          </tr>
        </thead>
        <tbody>
          <% @novels.each do |novel| %>
            <tr>
              <td>
                <%= link_to admin_novel_path(novel) do %>
                  <%= novel.title %>
                <% end %>
              </td>
              <td><%= novel.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>