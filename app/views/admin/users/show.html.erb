<div class="container">
  <div class="row">
    <div class="col text-center mt-1", style="background-color: #99cccc;">
      <%= flash[:notice] %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-2 mt-3">
      <h4><%= @user.name %>さんのプロフィール詳細</h4>
      <p><%= image_tag @user.get_profile_image(100, 100) %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-2">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>会員名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_deleted == true %>
              <p>退会済み</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      </table>
      <h5>投稿したゴフノベル</h5>
      <table class="table">
        <thead>
          <th>タイトル</th>
          <th>投稿日</th>
        </thead>
        <tbody>
          <% @novels.each do |novel| %>
            <tr>
              <td>
                <%= link_to admin_novel_path(novel) do %>
                  <%= novel.title %>
                <% end %>
              </td>
              <td><%= novel.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
          <% end%>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
      <%= link_to "会員一覧へ", admin_users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>