<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h4><%= @user.name %>さんのプロフィール詳細</h4>
      <p><%= image_tag @user.get_profile_image(50, 50) %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_deleted == true %>
              <p>退会済み</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
      <%= link_to "ユーザー一覧へ", admin_users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>