<div class="container">
  <div class="row">
    <div class="col text-center mt-1", style="background-color: #99cccc;">
      <%= flash[:notice] %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <div class="admin-wrapped">
        <h4 style="background-color: #000088;", class="text-white pl-5">会員一覧</h4>
        <table class="table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>会員名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to admin_user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_deleted == true %>
                    <p>退会</p>
                  <% else %>
                    <p>有効</p>
                  <% end %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>