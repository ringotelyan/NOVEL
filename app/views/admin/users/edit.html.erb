<div class="container">
  <div class="row">
    <div class="col text-center mt-1", style="background-color: #99cccc;">
      <%= flash.now[:alert] %>
      <%= render 'error', user: @user %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-2 mt-3">
      <h4>会員情報編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <table class="table table-borderless">

          <tr>
            <td><label for="inputName">会員名</label></td>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %></td>
          </tr>
          <tr>
            <td><label for="inputImage">プロフィール画像</label></td>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <td><label for="inputIntroduction">自己紹介</label></td>
            <td><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label :is_deleted, "退会" %>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", data: { confirm: "本当に変更しますか？"} %></td>
          </tr>

        </table>
      <% end %>
    </div>
  </div>
</div>