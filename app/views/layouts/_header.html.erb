<header class="shadow-sm">
  <!--<nav class="navbar navbar-expand-lg navbar-light border-bottom border-success" style="background-color: rgba(240,255,240);">-->
  <nav class="navbar navbar-expand-lg navbar-light border-bottom border-success">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><span><%= image_tag 'logo.jpg' %><i class="fas fa-feather text-info"></i></span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to public_user_path(current_user.id), class: 'nav-link text-success' do %>
                <i class="fas fa-address-book"></i>
                マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_users_path, class: 'nav-link text-success' do %>
                <i class="fas fa-user"></i>
                会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_novels_path, class: 'nav-link text-success' do %>
                <i class="fas fa-book"></i>
                ゴフノベル一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_genres_path, class: 'nav-link text-success' do %>
                <i class="fas fa-link"></i>
                ジャンル一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-success' do %>
                <i class="fas fa-sign-out-alt"></i>
                ログアウト
              <% end %>
            </li>
            <li class="nav-item">
              <%= render 'public/searches/search' %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_users_path, class: 'nav-link text-success' do %>
                <i class="fas fa-user"></i>
                会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_novels_path, class: 'nav-link text-success' do %>
                <i class="fas fa-book"></i>
                ゴフノベル一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_genres_path, class: 'nav-link text-success' do %>
                <i class="fas fa-link"></i>
                ジャンル一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-success' do %>
                <i class="fas fa-sign-out-alt"></i>
                ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to public_path, class: 'nav-link text-success' do %>
                <i class="fas fa-home"></i>
                ホーム
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_about_path, class: 'nav-link text-success' do %>
                <i class="fas fa-book-open"></i>
                5HUNOVELとは
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-success' do %>
                <i class="fas fa-user-plus"></i>
                会員登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-success' do %>
                <i class="fas fa-sign-in-alt"></i>
                ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>